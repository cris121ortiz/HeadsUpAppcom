<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/categorybg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/promptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Place phone on forehead."
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Place your phone on your forehead." />

        <TextView
            android:id="@+id/three_two_one_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#91ff0004"
            android:textSize="100sp"
            android:visibility="gone"
            tools:text="3" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center_horizontal"
            android:textColor="#ffc44f"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="Timer" />
    </RelativeLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000FF00"
        android:visibility="gone" />
</RelativeLayout>